<!DOCTYPE html>
<html>
  <head>
    <title>About</title>
  </head>

  <body>
    <h1>Hi <%= name %>, you have travelled to the following places:</h1>
    <ul>
      <% countries.forEach(function(country) { %>
      <li><%= country %></li>
      <% }); %>
    </ul>
    <p>
      <strong> Keep Exploring! </strong>
    </p>

    <form action="/vists" method="post" class="form">
      <div class="form">
        <label for="countryName">
          Enter country:
          <input type="text" id="country" name="country" autocomplete="on" />
        </label>
        <label for="arrivalTime">
          Enter arrrival time:
          <input
            type="datetime-local"
            id="arrivalTime"
            name="arrivalTime"
            requied
          />
        </label>
        <label for="departureTime">
          Enter departure time:
          <input
            type="datetime-local"
            id="departureTime"
            name="departureTime"
            required
          />
        </label>
        <button>Save</button>
      </div>
    </form>
  </body>
</html>
